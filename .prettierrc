{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "proseWrap": "never",
        "requirePragma": false,
        "singleQuote": false
      }
    },
    {
      "files": "package.json",
      "options": {
        "parser": "json",
        "proseWrap": "preserve"
      }
    }
  ]
}
